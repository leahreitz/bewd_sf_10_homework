<img class = "center_image" src="http://i.dailymail.co.uk/i/pix/2014/08/05/1407225932091_wps_6_SANTA_MONICA_CA_AUGUST_04.jpg" />
<h1>This is an animal listing</h1>
<h2>Holy moly! This is happening!!!!</h2>

<table>
  <thead>
    <tr>
      <th>Animal type</th>
      <th>Neuter status</th>
      <th>Name</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.name %></td>
        <td><%= animal.animal_type %></td>
        <td><%= animal.age %></td>
        <td><%= animal.neuter_status %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

