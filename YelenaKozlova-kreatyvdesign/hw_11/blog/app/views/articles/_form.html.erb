<%= simple_form_for @article do |f| %>

  <%= f.input :title, label: 'Title (Required)', required: false, error: 'Title can\'t be blank. Minimum 5 characters.' %>
  <%= f.input :author, label: 'Author (Required)', required: false, error: 'Author can\'t be blank.' %>
  <%= f.input :text, label: 'Body', :input_html => { :rows => 8 } %>
  <%= f.input :private %>
  <%= f.button :submit %>

<% end %>
