<p id="notice"><%= notice %></p>

<h1>Listing Zoos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Animal type</th>
      <th>Age</th>
      <th>Available</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zoos.each do |zoo| %>
      <tr>
        <td><%= zoo.name %></td>
        <td><%= zoo.animal_type %></td>
        <td><%= zoo.age %></td>
        <td><%= zoo.available %></td>
        <td><%= zoo.image %></td>
        <td><%= link_to 'Show', zoo %></td>
        <td><%= link_to 'Edit', edit_zoo_path(zoo) %></td>
        <td><%= link_to 'Destroy', zoo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

